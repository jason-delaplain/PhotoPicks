{
  "expo": {
    "name": "PhotoPicks",
    "slug": "photopicks",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/app_icon_photo_picks.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/app_icon_photo_picks.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0e1a"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "PhotoPicks needs access to your photo library to help you organize and manage your photos.",
        "NSPhotoLibraryAddUsageDescription": "PhotoPicks needs permission to save organized photos back to your library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/app_icon_photo_picks.png",
        "backgroundColor": "#0a0e1a"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "favicon": "./assets/app_icon_photo_picks.png"
    }
  }
}
